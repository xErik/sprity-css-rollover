{{#each layouts}}
  {{#each sprites}}
    {{#if dpi}}
    @media (-webkit-min-device-pixel-ratio: {{ratio}}), (min-resolution: {{dpi}}dpi) {
    {{/if}}

    .{{cssesc ../classname}}:hover {

        -webkit-animation-play-state: running;
        -moz-animation-play-state: running;
        -ms-animation-play-state: running;
        -o-animation-play-state: running;
        animation-play-state: running;
    }

    .{{cssesc ../classname}} {

      background-image: url('{{escimage url}}');
      width: {{../layout.items.[0].width}}px;
      height: {{../layout.items.[0].height}}px;

      -webkit-animation: play {{../layout.items.length}}s steps({{../layout.items.length}}) infinite;
      -moz-animation: play {{../layout.items.length}}s steps({{../layout.items.length}}) infinite;
      -ms-animation: play {{../layout.items.length}}s steps({{../layout.items.length}}) infinite;
      -o-animation: play {{../layout.items.length}}s steps({{../layout.items.length}}) infinite;
      animation: play {{../layout.items.length}}s steps({{../layout.items.length}}) infinite;

        -webkit-animation-play-state: paused;
        -moz-animation-play-state: paused;
        -ms-animation-play-state: paused;
        -o-animation-play-state: paused;
        animation-play-state: paused;

      {{#if dpi}}
      background-size: {{baseWidth}}px {{baseHeight}}px;
      {{/if}}
    }

        @-webkit-keyframes play {
          from {
            background-position: -0px -0px;
          }
          to {
            background-position: -0px -{{baseDim height}}px;
          }
        }
        @-moz-keyframes play {
          from {
            background-position: -0px -0px;
          }
          to {
            background-position: -0px -{{baseDim height}}px;
          }
        }
        @-ms-keyframes play {
          from {
            background-position: -0px -0px;
          }
          to {
            background-position: -0px -{{baseDim height}}px;
          }
        }
        @-o-keyframes play {
          from {
            background-position: -0px -0px;
          }
          to {
            background-position: -0px -{{baseDim height}}px;
          }
        }
        @keyframes play {
          from {
            background-position: -0px -0px;
          }
          to {
            background-position: -0px -{{baseDim height}}px;
          }
        }

    {{#if dpi}}
    }
    {{/if}}
  {{/each}}

  {{#each layout.items}}
  .{{../classname}}-{{meta.name}} {
    background-position: -{{baseDim x}}px -{{baseDim y}}px;
  }
  {{/each}}

{{/each}}
